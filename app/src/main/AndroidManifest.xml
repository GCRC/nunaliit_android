<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.carleton.gcrc.n2android_mobile1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.EmbeddedCordovaActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/cordova_name"
            android:theme="@style/FullscreenTheme"
            android:parentActivityName=".activities.MainActivity">
        </activity>

        <activity
            android:name=".activities.ConnectionListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/connection_list_name"
            android:theme="@style/FullscreenTheme"
            android:parentActivityName=".activities.MainActivity">
        </activity>

        <activity
            android:name=".activities.ConnectionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/connection_name"
            android:theme="@style/FullscreenTheme"
            android:parentActivityName=".activities.ConnectionListActivity">
        </activity>

        <activity
            android:name=".activities.AddConnectionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/add_connection_name"
            android:theme="@style/FullscreenTheme"
            android:parentActivityName=".activities.ConnectionListActivity">
        </activity>

        <service
            android:name=".CouchDbService"
            android:label="@string/couchDbService_label">

        </service>
    </application>

</manifest>
